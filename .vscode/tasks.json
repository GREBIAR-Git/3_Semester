{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile",
			"command": "C:\\Program Files (x86)\\gcc\\bin\\gcc.exe",
			"args": [
				"-g",
				"-c",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "Linker",
			"command": "C:\\Program Files (x86)\\gcc\\bin\\gcc.exe",
			"args": [
				"-o",
				"${fileBasenameNoExtension}",
				"${fileDirname}\\${fileBasenameNoExtension}.o",
				"-lgdi32",
				"-lcomdlg32"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
            "label": "Build GCC",
            "dependsOrder": "sequence",
			"dependsOn":["Compile", "Linker"],
			"group": "build"
        },
        {
            "type": "shell",
            "label": "Clear",
            "command": "Remove-Item",
            "args": [
				"${fileBasenameNoExtension}.*",
				"-Exclude *.c"
            ]
        }
	]
}